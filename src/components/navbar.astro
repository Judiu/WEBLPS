<header class="bg-white bg-opacity-5 text-white shadow-lg hidden md:block">
    <div class="container mx-auto flex items-center h-24">
        <a href="" class="flex items-center justify-center">
            <img
                class="h-16"
                src="https://i.ibb.co/6Yxs70d/2021-10-26-23h27-03.png"
                alt=""
            />
            <span class="ml-4 uppercase font-black"> LPS Ingenieria</span>
        </a>
        <nav class="contents font-semibold text-base lg:text-lg">
            <ul class="mx-auto flex items-center">
                <li class="p-5 xl:p-8 btn from-top active">
                    <a href="">
                        <span>Inicio</span>
                    </a>
                </li>
                <li class="p-5 xl:p-8 btn from-top">
                    <a href="">
                        <span>Quienes Somos</span>
                    </a>
                </li>
                <li class="p-5 xl:p-8 btn from-top">
                    <a href="">
                        <span>Servicios</span>
                    </a>
                </li>
                <li class="p-2 xl:p-8 btn from-top">
                    <a href="">
                        <span>Proyectos</span>
                    </a>
                </li>
            </ul>
        </nav>
        <button>
            <a
                href=""
                class="bg-black bg-opacity-5 text-white p-2 rounded-lg btn from-top"
            >
                <span>Contacto</span>
            </a>
        </button>
    </div>
</header>

<style>
    body {
        background: black;
        --def: black;
        --inv: #fff;
        flex-direction: column;
    }
    .btn {
        position: relative;
        color: var(--inv);
        transition: all 500ms cubic-bezier(0.77, 0, 0.175, 1);
        cursor: pointer;
        user-select: none;
    }

    .btn:before,
    .btn:after {
        content: "";
        position: absolute;
        transition: inherit;
        z-index: -1;
    }

    .btn:hover {
        color: var(--def);
        transition-delay: 0.5s;
    }

    .btn:hover:before {
        transition-delay: 0s;
    }

    .btn:hover:after {
        background: var(--inv);
        transition-delay: 0.35s;
    }
    .from-top:before,
    .from-top:after {
        left: 0;
        height: 0;
        width: 100%;
    }

    .from-top:before {
        bottom: 0;
        border: 1px solid var(--inv);
        border-top: 0;
        border-bottom: 0;
    }

    .from-top:after {
        top: 0;
        height: 0;
    }

    .from-top:hover:before,
    .from-top:hover:after {
        height: 100%;
    }
    *,
    *:before,
    *:after {
        box-sizing: border-box;
    }
</style>
